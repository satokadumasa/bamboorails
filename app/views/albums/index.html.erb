        <h1>Albums</h1>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-12 order-lg-1 order-2">
            <hr>
            <%= current_user ? link_to('New Album', new_album_path, class: 'btn btn-primary btn-sm') : '' %>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-2 col-md-2 col-12 order-lg-1 order-2">
            User
          </div>
          <div class="col-lg-6 col-md-6 col-12 order-lg-1 order-2">
            Title
          </div>
          <div class="col-lg-4 col-md-4 col-12 order-lg-1 order-2">
            Description
          </div>
        </div>
        <% @albums.each do |album| %>
        <div class="row">
          <div class="col-lg-2 col-md-2 col-12 order-lg-1 order-2">
            <%= album.user.user_info ? album.user.user_info.user_name : 'User-' << album.user_id %>
          </div>
          <div class="col-lg-6 col-md-4 col-12 order-lg-1 order-2">
            <%= link_to album.title, album %>
          </div>
          <div class="col-lg-4 col-md-4 col-12 order-lg-1 order-2">
            <%= br(album.description.slice(0, 256)) %>
          </div>
        </div>
        <% end %>
        <br>

