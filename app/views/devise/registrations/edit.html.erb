          <h4>修正 <%= resource_name.to_s.humanize %></h4>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group col-12 col-md-4">
              <%= f.label :email, class: 'control-label form-control-static login_label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group col-12 col-md-4">
              <%= f.label :current_password, class: 'control-label form-control-static login_label' %>
              <i>(<%=t('users.edit.caution_input_current_password') %>)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="form-group col-12 col-md-4">
              <%= f.label :password, class: 'control-label form-control-static login_label' %>
              <i>(<%=t('users.edit.caution_input_new_password') %>)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <br />
                <em><%=t('users.edit.characters_minimum') %> <%= @minimum_password_length %></em>
              <% end %>
            </div>

            <div class="form-group col-12 col-md-4">
              <%= f.label :password_confirmation, class: 'control-label form-control-static login_label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="actions">
              <%= f.submit t('users.edit.update') %>
            </div>
          <% end %>
          <h3><%=t('users.edit.cancel_my_account') %></h3>
          <%= button_to t('users.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

          <%= link_to "Back", :back, class: 'btn btn-primary btn-sm' %>
