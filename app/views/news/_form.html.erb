        <%= form_with(model: news, local: true, html: {class: 'justify-content-start'}) do |form| %>
          <% if news.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>
              <ul>
              <% news.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <%= form.hidden_field :user_id, value: news.user_id ? news.user_id : current_user.id %>
