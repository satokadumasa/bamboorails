            </div>

            <div class="input-group">
              <%= form.label :body, class: 'control-label form-control-static ccol-12 col-md-2 login_label' %>
              <%= form.text_area :body, class: 'form-control col-12 col-md-9 login_label' %>
            </div>

            <div class="actions">
              <%= form.submit t('news.new.submit'), {class: "btn btn-primary"} %>
            </div>
          </div>
        <% end %>
