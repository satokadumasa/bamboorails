    <div class="row main_contents">
      <div class="col-lg-12 col-md-12 col-sm-12 col-12">
        <p id="notice"><%= notice %></p>

        <h1>Note Comments</h1>

        <table>
          <thead>
            <tr>
              <th>User</th>
              <th>Bbs</th>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @note_comments.each do |note_comment| %>
              <tr>
                <td><%= note_comment.user_id %></td>
                <td><%= note_comment.bbs_id %></td>
                <td><%= note_comment.title %></td>
                <td><%= note_comment.body %></td>
                <td><%= link_to 'Show', note_comment %></td>
                <td><%= link_to 'Edit', edit_note_comment_path(note_comment) %></td>
                <td><%= link_to 'Destroy', note_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Note Comment', new_note_comment_path %>
      </div>
    </div>
