        <p id="notice"><%= notice %></p>

        <h1>Pages</h1>

        <table class="table">
          <tbody>
            <% @pages.each do |page| %>
              <tr>
                <td style="width: 20%;"><%= page.user.user_info.name %></td>
                <td style="width: 30%;"><%= page.title %></td>
                <td style="width: 20%;"><%= page.detail %></td>
                <td style="width: 10%;"><%= link_to 'Show', page %></td>
                <td style="width: 10%;"><%= link_to 'Edit', edit_page_path(page) %></td>
                <td style="width: 10%;"><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

