<p id="notice"><%= notice %></p>

<% (0...@post.images.count).each do |image| %>
  <%= image_tag(@post.thumbnail(image)) %>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary btn-sm' %> |
<%= link_to 'Back', posts_path, class: 'btn btn-primary btn-sm' %>
