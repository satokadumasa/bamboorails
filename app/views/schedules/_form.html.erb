          </div>

          <div class="field">
            <%= form.label :detail %>
            <%= form.text_area :detail %>
          </div>

          <div class="field">
            <%= form.label :started_at %>
            <%= form.datetime_select :started_at %>
          </div>

          <div class="field">
            <%= form.label :ended_at %>
            <%= form.datetime_select :ended_at %>
          </div>

          <div class="actions">
            <%= form.submit, {class: "btn btn-primary"} %>
          </div>
        <% end %>
      </div>
    </div>
