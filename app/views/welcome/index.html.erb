        <div class="row">
          <div class="col-lg-9 col-md-12 col-sm-12 col-12 order-lg-1 order-2 h-auto">
            <h5><%= t 'top_page.note' %></h5>
            <div class="row ml-1">
              <% @notes.each do |note| %>
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                  <%= link_to note.title, note %>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-8">
                  Author:<%= note.user.user_info ? link_to(note.user.user_info.user_name, {controller: :user_infos, action: :show, id: note.user.user_info.user_name}) : 'User-' << note.user_id.to_s %>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                  <%= l(note.created_at, format: :short) %>
                </div>
              <% end %>
            </div>
            <br>
            <% if current_user %>
              <h5><%= t 'top_page.follow_user_note' %></h5>
              <div class="row ml-1">
                <% @follow_user_notes.each do |follow_user_note| %>
                  <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <%=link_to follow_user_note.title, follow_user_note %>
                  </div>
                  <div class="col-lg-8 col-md-8 col-sm-8 col-8">
                    Author:<%= follow_user_note.user.user_info ? link_to(follow_user_note.user.user_info.user_name, {controller: :user_infos, action: :show, id: follow_user_note.user.user_info.user_name}) : 'User-' << follow_user_note.user_id.to_s %>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                    <%= l(follow_user_note.created_at, format: :short) %>
                  </div>
                <% end %>
              </div>
              <br>
              <h5><%= t 'top_page.bookmark' %></h5>
              <div class="row ml-1">
                <% @bookmarks.each do |bookmarks| %>
                  <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <%=link_to bookmarks.note.title, bookmarks.note %>
                  </div>
                  <div class="col-lg-8 col-md-8 col-sm-8 col-8">
                    Author:<%= bookmarks.note.user.user_info ? link_to(bookmarks.note.user.user_info.user_name, {controller: :user_infos, action: :show, id: bookmarks.note.user.user_info.user_name}) : 'User-' << bookmarks.note.user_id.to_s %>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                    <%= l(bookmarks.note.created_at, format: :short) %>
                  </div>
                <% end %>
              </div>        
            <% end %>
          </div>

          <div class="col-lg-3 col-md-12 col-sm-12 col-12 order-lg-2 order-1 border border-dark h-auto">
            <h5><%= t 'top_page.news' %></h5>
            <div class="row">
              <% @newses.each do |news| %>
              <div class="col-12">
                <span style="color: green;">
                  <%= link_to news.title, news, class: "text-info" %><br>
                </span>
                <span style="font-size: small;">
                  <%= l(news.created_at, format: :short) %>
                </span>
              </div>
              <% end %>
            </div>
          </div>
        </div>
